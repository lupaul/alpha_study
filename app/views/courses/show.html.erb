<div id="course-show" class="container">
  <%= image_tag @course.banner_image_url.to_s %>
  <div class="course-title">
    <h2><%= @course.title %></h2>
  </div>
  <hr>
  <div class="course-info">
    <ul class="list-unstyled">
      <li>學校：<%= @course.school.name %></li>
      <li>地址：<%= @course.school.address %></li>
    </ul>
    <ul class="list-inline">
      <li><a href="#description">課程介紹</a></li>
      <li><a href="#experts">達人分享</a></li>
      <li><a href="#note">注意事項</a></li>
      <li><%= link_to '與學校面對面', new_consultation_path %></li>
    </ul>
  </div>
  <hr>
  <div id="description">
    <div class="subtitle"><h3>課程介紹</h3></div>
    <%= @course.description %>
  </div>
  <hr>
  <div id="experts">
    <div class="subtitle"><h3>達人分享</h3></div>
    <ul class="list-unstyled">
      <% @course.experts.each do |expert| %>
        <li>
          <div class="expert-name">達人名字：<%= expert.name %></div>
          <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= expert.video_url %>" frameborder="0" allowfullscreen></iframe>
        </li>
      <% end %>
    </ul>
  </div>
</div>
