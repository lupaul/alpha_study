 <div class="container">
  <%= form_for @expert do |f| %>
    <div class="form-group">
      <%= f.label :name, '名字' %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :subject, '介紹' %>
      <%= f.text_field :subject, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :video_url, '影片網址' %>
      <%= f.text_field :video_url, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :article, '分享文章' %>
      <%= f.text_field :article, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :course_id, '課程' %>
      <%= f.select :course_id, Course.all.collect { |c| [c.title, c.id] }, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :avatar_image, '達人頭像' %>
      <%= f.file_field :avatar_image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :card_image, '卡片圖片' %>
      <%= f.file_field :card_image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :banner_image, '橫幅圖片' %>
      <%= f.file_field :banner_image, class: "form-control" %>
    </div>
    <div class="form-group text-center">
      <%= f.submit '送出', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
