 <div class="container">
  <%= form_for @license do |f| %>
    <div class="form-group">
      <%= f.label :title, '名稱' %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, '介紹' %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :category_id, '類別' %>
      <%= f.select :category_id, Category.all.collect { |c| [c.title, c.id] }, class: "form-control" %>
    </div>
    <div class="form-group text-center">
      <%= f.submit '送出', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
