 <div class="container">
  <%= form_for @course do |f| %>
    <div class="form-group">
      <%= f.label :title, '名稱' %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, '介紹' %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :school_id, '學校' %>
      <%= f.select :school_id, School.all.collect { |s| [s.name, s.id] }, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :license_id, '證照' %>
      <%= f.select :license_id, License.all.collect { |l| [l.title, l.id] }, class: "form-control" %>
    </div>
    <div class="form-group text-center">
      <%= f.submit '送出', class: "btn btn-primary" %>
    </div>
    <div class="form-group">
      <%= f.label :card_image, '卡片圖片' %> (350x250)
      <%= f.file_field :card_image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :banner_image, '橫幅圖片' %> (1000x400)
      <%= f.file_field :banner_image, class: "form-control" %>
    </div>
  <% end %>
</div>
