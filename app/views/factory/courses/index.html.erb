<h2>課程列表</h2>
<%= link_to '加入課程', new_course_path %>
<table>
  <th>
    <td>名稱</td>
    <td>學校</td>
    <td>證照</td>
    <td>修改</td>
    <td>刪除</td>
  </th>
  <% @courses.each do |course| %>
  <tr>
    <td><%= link_to course.title, course_path(course) %></td>
    <td><%= course.school.name %></td>
    <td><%= course.license.title %></td>
    <td><%= link_to '修改', edit_course_path(course) %></td>
    <td><%= link_to '刪除', course_path(course), method: :delete %></td>
  </tr>
  <% end %>
</table>
<%= link_to '回首頁', root_path %>
