<h1 class="text-center">這是一個讓大家上傳假資料的地方</h1>
<div class="container text-center">
  <h2>學校列表</h2>
  <%= link_to '加入學校', new_school_path, class: "btn btn-info" %>
  <table class="table table-hover">
    <thead>
      <th>名稱</th>
      <th>地區</th>
      <th>email</th>
      <th>修改</th>
      <th>刪除</th>
    </thead>
    <tbody>
      <% @schools.each do |school| %>
      <tr>
        <td><%= link_to school.name, school_path(school) %></td>
        <td><%= school.location %></td>
        <td><%= school.email %></td>
        <td><%= link_to '修改', edit_school_path(school), class: "btn btn-warning btn-md" %></td>
        <td><%= link_to '刪除', school_path(school), method: :delete, class: "btn btn-danger btn-md" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div><%= link_to '查看更多', schools_path, class: "btn btn-basic btn-md" %></div>
</div>
<hr>
