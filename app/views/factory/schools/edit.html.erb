<%= form_for @school do |f| %>
  <%= f.label :name, '名稱' %>
  <%= f.text_field :name %>

  <%= f.label :description, '介紹' %>
  <%= f.text_area :description %>

  <%= f.label :location, '地區' %>
  <%= f.text_field :location %>

  <%= f.label :address, '地址' %>
  <%= f.text_field :address %>

  <%= f.label :email, '信箱' %>
  <%= f.text_field :email %>

  <%= f.submit '送出' %>
<% end %>