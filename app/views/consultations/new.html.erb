<div class="container">
  <%= simple_form_for @consultation, url: consultations_path, class: 'reservation-form' do |f| %>
    <div class="form-title">預約報名：(人數達三人即成行)</div>
    <div class="form-data">
      <%= f.input :name, label: "姓名", class: 'form-control' %>
      <%= f.input :email, placeholder: 'user@domain.com', class: 'form-control' %>
      <div class="form-group">
        <%= f.label "選擇時段" %> <br>
        <%= f.collection_check_boxes :datetime, Consultation::TIME_STRING, :first, :last, class: 'form-control' %> 
      </div>
      <div class="form-group">
        <%= f.label "選擇時間區段" %>
        <%= f.input :start_date, label: "開始日期", as: :date, order: [:year, :month, :day], class: 'form-control' %>
        <%= f.input :end_date, label: "結束日期", as: :date, order: [:month, :day], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "選擇學校" %> <br>
        <%= f.collection_select :id, School.all, :id, :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "選擇課程" %> <br>
        <%= f.collection_select :id, Course.all, :id, :title, class: 'form-control' %>
      </div>
    </div>
    <%= f.button :submit, "OK！我要預約", class: "form-btn" %>
  <% end %>
</div>
