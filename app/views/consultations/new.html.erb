<%= simple_form_for @consultation , url: consultations_path do |f| %>
  <%= f.input :name , label: "姓名" ,input_html:{class: "form-control"}%>
  <%= f.input :email ,placeholder: 'user@domain.com'%>
  <div class="group" id= "consultation">
    <%= f.label "選擇時段" %> <br>
    <%= f.collection_check_boxes :datetime, Consultation::TIME_STRING, :first,  :last%> <br><br>
    <%= f.label "選擇時間區段" %>
    <%= f.input :start_date, label: "開始日期", as: :date,
                             order: [ :year,:month, :day] %>
    <%= f.input :end_date, label: "結束日期", as: :date,
                            order: [:month, :day] %>
  </div>

    <%= f.collection_select(:school_id, School.all, :id, :name) %>
    <%= f.collection_select(:license_id, License.all, :id, :title) %>
    <br><br>
    <%= f.button :submit, "預約查詢" ,input_html:{class: "form-control"}%>
<% end %>
