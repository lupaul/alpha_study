<header>
  <div class="container">
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag 'justudy_icon.png' %>
      <% end %>
    </div>
    <div class="clear-fix">
      <div id="about-us" class="pull-right">
        <div><a href="#">關於我們</a></div>
        <ul class="list-inline">
          <% if !current_user %>
            <li> <%= link_to("註冊新會員", new_user_registration_path) %> /</li>
            <li> <%= link_to("登入", new_user_session_path) %></li>
          <% else %>
            <li class="dropdown">
              <a href= "#", class="dropdown-toggle "  data-toggle="dropdown">
                Hi!!!, <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" >
                <li><%= link_to("Admin使用者學校設定", crm_users_path) %></li>
                <li><%= link_to("個人設定", edit_user_registration_path) %></li>
              </ul>
            </li>
            <li><%= link_to("登出", destroy_user_session_path, method: :delete) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
<nav>
  <div class="container">
    <ul class="list-inline">
      <li><%= link_to '證照達人養成', category_path(id: 1) %></li>
      <li><%= link_to '留學說明會', activities_path %></li>
      <li><%= link_to '學校面對面', reservations_path %></li>
      <li><%= link_to '達人分享', experts_path %></li>
      <li><%= link_to '學校夥伴', schools_path %></li>
      <li><%= link_to '部落格', root_path %></li>
    </ul>
  </div>
</nav>




