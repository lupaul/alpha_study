<header>
  <div class="container">
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag 'justudy_icon.png' %>
      <% end %>
    </div>
    <div class="clear-fix">
      <div id="about-us" class="pull-right">
        <div><a href="#">關於我們</a></div>
        <ul class="list-inline">
          <% if !current_user %>
            <li> <%= link_to("註冊新會員", new_user_registration_path) %> /</li>
            <li> <%= link_to("登入", new_user_session_path) %></li>
          <% else %>
            <li class="dropdown">
              <a href= "#", class="dropdown-toggle "  data-toggle="dropdown">
                Hi!!!, <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" >
                <li><%= link_to("基本資料", profile_account_path(current_user)) %></li>
                <li><%= link_to("報名查詢", check_calender_account_path(current_user)) %></li>
                <li><%= link_to("追蹤查詢", check_liked_account_path(current_user)) %></li>
                <li><%= link_to("帳戶設定", edit_user_registration_path) %></li>
                <% if current_user.role == "admin" %>
                <li><%= link_to("學校後台管理", admin_schools_path) %></li>
                <% end %>
              </ul>
            </li>
            <li><%= link_to("登出", destroy_user_session_path, method: :delete) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
